{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "group": "Base Settings",
        "description": "The name of the administrator account for each machine. 'domainadmin' and 'user', 'user_a', 'testuser'  also will be created at each domain defined below"
      },
      "defaultValue": "localadmin"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "group": "Base Settings",
        "description": "Password for 'localadmin', 'domainadmin', 'user', 'user_a', 'testuser'"
      }
    },
    
    "deployJumpbox": {
      "type": "string",
      "defaultValue": "Yes",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "group": "Jumpbox Settings",
        "description": "Indicates wheter or not include Jumpbox in this deployment"
      }
    },
    "githubUsername": {
      "type": "string",
      "defaultValue": "",   
      "metadata": {
        "group": "Jumpbox Settings",
        "description": "UserName for Github connection, Leave empty if Jumpbox is not part of this deployment"
      }
    },  
    "githubToken": {
      "type": "securestring",
      "defaultValue": "",   
      "metadata": {
        "group": "Jumpbox Settings",
        "description": "Token for Github connection, Leave empty if Jumpbox is not part of this deployment"
      }
    },
    "githubUrl": {
      "type": "string",
      "defaultValue": "github.com/MehmetVural",   
      "metadata": {
        "group": "Jumpbox Settings",
        "description": "Base Url for Github connection, Leave empty if Jumpbox is not part of this deployment"
      }
    },
    "deployDomain": {
      "type": "string",
      "defaultValue": "Yes",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "group": "Domain Settings",
        "description": "Indicates wheter or not include Domain Controller in this deployment"
      }
    },
    "includeCertificateAuthority" : {
      "type": "string",
      "defaultValue": "No",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "group": "Domain Settings",
        "description": "Indicates wheter or not include certificate authority in Domain"
      }
    },
    "deployDomainDMZ": {
      "type": "string",
      "defaultValue": "No",
      "allowedValues": [
        "Yes",
        "No"
      ],
      "metadata": {
        "group": "Domain Settings",
        "description": "Indicates wheter or not include DMZ zone Domain  in this deployment"
      }
    }
  },
  "variables": {    
   

       
  },
  "resources": [    
    
  ]
}